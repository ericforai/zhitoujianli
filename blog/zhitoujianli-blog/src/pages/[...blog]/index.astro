---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';

import merge from 'lodash.merge';
import type { ImageMetadata } from 'astro';
import Layout from '~/layouts/PageLayout.astro';
import SinglePost from '~/components/blog/SinglePost.astro';
import ToBlogLink from '~/components/blog/ToBlogLink.astro';

import { getCanonical, getPermalink } from '~/utils/permalinks';
import { getStaticPathsBlogPost, blogPostRobots } from '~/utils/blog';
import { findImage } from '~/utils/images';
import type { MetaData } from '~/types';
import RelatedPosts from '~/components/blog/RelatedPosts.astro';

export const prerender = true;

export const getStaticPaths = (async () => {
  return await getStaticPathsBlogPost();
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { post } = Astro.props as Props;

const url = getCanonical(getPermalink(post.permalink, 'post'));
const image = (await findImage(post.image)) as ImageMetadata | string | undefined;

// 确保有默认分享图片（微信要求）
const siteUrl = String(Astro.site).replace(/\/$/, ''); // 移除末尾斜杠
const defaultShareImage = `${siteUrl}/blog/images/og-share-logo.jpg`;
const shareImage = image || defaultShareImage;

// 处理图片URL，确保是绝对路径
let shareImageUrl: string;
let shareImageWidth: number | undefined;
let shareImageHeight: number | undefined;

if (typeof shareImage === 'string') {
  // 如果是字符串，检查是否是绝对URL
  if (shareImage.startsWith('http://') || shareImage.startsWith('https://')) {
    shareImageUrl = shareImage;
  } else if (shareImage.startsWith('/')) {
    // 相对路径，转换为绝对URL
    shareImageUrl = `${Astro.site}${shareImage}`;
  } else {
    // 其他情况，使用默认图片
    shareImageUrl = defaultShareImage;
  }
} else if (shareImage && typeof shareImage === 'object' && 'src' in shareImage) {
  // ImageMetadata对象
  shareImageUrl = String(new URL(shareImage.src, Astro.site));
  shareImageWidth = shareImage.width;
  shareImageHeight = shareImage.height;
} else {
  shareImageUrl = defaultShareImage;
}

const metadata = merge(
  {
    title: post.title,
    description: post.excerpt,
    keywords: post.keywords || '',
    robots: {
      index: blogPostRobots?.index,
      follow: blogPostRobots?.follow,
    },
    openGraph: {
      type: 'article',
      title: post.title, // 微信分享需要明确的标题
      description: post.excerpt || '', // 微信分享需要明确的描述
      url: url, // 确保URL是绝对路径
      images: [{
        url: shareImageUrl,
        ...(shareImageWidth && { width: shareImageWidth }),
        ...(shareImageHeight && { height: shareImageHeight }),
      }],
    },
  },
  { ...(post?.metadata ? { ...post.metadata, canonical: post.metadata?.canonical || url } : {}) }
) as MetaData;
---

<Layout metadata={metadata}>
  {post.structuredData && (
    <script type="application/ld+json" set:html={post.structuredData} />
  )}
  <SinglePost post={{ ...post, image: image }} url={url}>
    {post.Content ? <post.Content /> : <Fragment set:html={post.content || ''} />}
  </SinglePost>
  <ToBlogLink />
  <RelatedPosts post={post} />
</Layout>
