---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-subtle not-prose bg-light']}>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 text-default">
    <div class="py-10">
      <!-- 品牌区域 - Apple风格简洁设计 -->
      <div class="mb-8 pb-6 border-b border-subtle">
        <a
          class="inline-block font-bold text-xl text-primary hover:text-accent transition-colors duration-200"
          href={getHomePermalink()}
        >
          {SITE?.name}
        </a>
        <p class="text-muted text-xs mt-2 max-w-md">
          用AI让求职更智能
        </p>
      </div>

      <!-- 主要内容区域 - 4列紧凑布局 -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-8 mb-8">
        <!-- 链接区域 -->
        {
          links.map(({ title, links }) => (
            <div>
              <h3 class="font-semibold text-default text-sm mb-3">{title}</h3>
              <ul class="space-y-2">
                {links.map(({ text, href }) => (
                  <li>
                    <a
                      class="text-muted hover:text-primary transition-colors duration-200 text-xs block"
                      href={href}
                      set:html={text}
                    />
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <!-- 底部区域 -->
      <div class="pt-8 border-t border-subtle">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
          <div class="text-sm text-muted">
            {footNote ? <Fragment set:html={footNote} /> : <Fragment>© 2024 {SITE?.name} · 让求职更智能</Fragment>}
          </div>
          {
            secondaryLinks?.length ? (
              <div class="flex flex-wrap gap-4 text-sm">
                {secondaryLinks.map(({ text, href }, index) => (
                  <a class="text-muted hover:text-primary transition-colors duration-200" href={href} set:html={text} />
                ))}
              </div>
            ) : (
              ''
            )
          }
        </div>
      </div>
    </div>
  </div>
</footer>
