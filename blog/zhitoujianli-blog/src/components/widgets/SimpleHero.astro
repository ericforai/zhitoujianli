        <h1 class="font-bold font-heading leading-tight tracking-tight mb-6 text-gray-900 text-5xl lg:text-6xl animate-fade">
          <slot name="title">{title}</slot>
        </h1>
        <div class="max-w-4xl mx-auto">
          <p class="text-gray-600 text-xl lg:text-2xl mb-8 leading-relaxed animate-slide">
            <slot name="subtitle">{subtitle}</slot>
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-scale">
            <slot name="actions">{actions}</slot>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
