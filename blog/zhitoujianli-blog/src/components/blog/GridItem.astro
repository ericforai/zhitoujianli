---
import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

import { getPermalink } from '~/utils/permalinks';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';

// 根据标签选择不同图标的函数
function getCategoryIcon(post: Post): string {
  const iconMap: Record<string, string> = {
    'AI': '<path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/>',
    '求职': '<path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/><path d="M9 12h6m-6 4h6m-6-8h6"/>',
    '智能化': '<path d="M9 12l2 2 4-4"/><path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/><path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/>',
    '简历': '<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14,2 14,8 20,8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10,9 9,9 8,9"/>',
    '招聘': '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>',
    '面试': '<path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>',
    '职场': '<path d="M22 12h-4l-3 9L9 3l-3 9H2"/>',
    '职业发展': '<path d="M3 3h18v18H3zM12 8v8m-4-4h8"/>',
    '技能提升': '<path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55.47.98.97 1.21l1.57.66c.55.23 1.15.23 1.7 0l1.57-.66c.5-.23.97-.66.97-1.21v-2.34"/><path d="M18 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2z"/>',
    '行业分析': '<path d="M3 3v18h18"/><path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"/>',
    '技术深度': '<path d="M9 12l2 2 4-4"/><path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/><path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/><path d="M12 3c0 1-1 3-3 3s-3-2-3-3 1-3 3-3 3 2 3 3"/><path d="M12 21c0-1 1-3 3-3s3 2 3 3-1 3-3 3-3-2-3-3"/>',
    '成功案例': '<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22,4 12,14.01 9,11.01"/>',
    '平台介绍': '<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>',
    '产品动态': '<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>'
  };

  // 默认文档图标
  const defaultIcon = '<path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>';

  // 根据文章标签选择图标
  if (post.tags && Array.isArray(post.tags)) {
    for (const tag of post.tags) {
      if (iconMap[tag]) {
        return iconMap[tag];
      }
    }
  }

  // 如果没有匹配的标签，使用默认图标
  return defaultIcon;
}

// 计算阅读时间的函数
function calculateReadingTime(post: Post): number {
  // 如果有预设的阅读时间，直接使用
  if (post.readTime && typeof post.readTime === 'number') {
    return post.readTime;
  }

  // 基于文章内容计算阅读时间
  let wordCount = 0;

  // 计算标题字数
  if (post.title) {
    wordCount += post.title.length;
  }

  // 计算摘要字数
  if (post.excerpt) {
    wordCount += post.excerpt.length;
  }

  // 计算描述字数
  if (post.description) {
    wordCount += post.description.length;
  }

  // 中文阅读速度：每分钟约300字
  // 英文阅读速度：每分钟约200字
  // 这里按中文计算，假设平均每分钟250字
  const readingSpeed = 250;
  const minutes = Math.ceil(wordCount / readingSpeed);

  // 最少1分钟，最多20分钟
  return Math.max(1, Math.min(minutes, 20));
}
---

{link ? (
  <a href={link} class="block h-full">
    <article class="blog-card group transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade h-full">
      <!-- 文章缩略图区域 -->
      <div class="blog-card-image">
        <div class="w-full h-full flex flex-col items-center justify-center p-4">
          <!-- 根据标签选择不同图标 -->
          <svg class="w-12 h-12 text-white opacity-90 mb-3" fill="currentColor" viewBox="0 0 24 24">
            {getCategoryIcon(post)}
          </svg>
          <!-- 文章摘要 -->
          <div class="text-left">
            <p class="text-white text-sm font-medium leading-tight opacity-95 line-clamp-3">
              {post.excerpt}
            </p>
          </div>
        </div>
      </div>

      <!-- 文章内容区域 -->
      <div class="blog-card-content">
        <!-- 文章元信息 -->
        <div class="flex items-center text-sm text-gray-500 space-x-4">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {new Date(post.publishDate).toLocaleDateString('zh-CN')}
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            {calculateReadingTime(post)}分钟阅读
          </div>
        </div>

        <!-- 文章标题 -->
        <h3 class="text-lg font-bold text-gray-900 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2">
          {post.title}
        </h3>

        <!-- 阅读全文提示 -->
        <div class="pt-2">
          <span class="inline-flex items-center text-blue-600 font-medium group-hover:text-blue-700 transition-colors duration-200">
            点击阅读全文
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </div>
      </div>
    </article>
  </a>
) : (
  <article class="blog-card group transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade h-full">
    <!-- 文章缩略图区域 -->
    <div class="blog-card-image">
      <div class="w-full h-full flex flex-col items-center justify-center p-4">
        <!-- 根据标签选择不同图标 -->
        <svg class="w-12 h-12 text-white opacity-90 mb-3" fill="currentColor" viewBox="0 0 24 24">
          {getCategoryIcon(post)}
        </svg>
        <!-- 文章摘要 -->
        <div class="text-left">
          <p class="text-white text-sm font-medium leading-tight opacity-95 line-clamp-3">
            {post.excerpt}
          </p>
        </div>
      </div>
    </div>

    <!-- 文章内容区域 -->
    <div class="blog-card-content">
      <!-- 文章元信息 -->
      <div class="flex items-center text-sm text-gray-500 space-x-4">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          {new Date(post.publishDate).toLocaleDateString('zh-CN')}
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          {calculateReadingTime(post)}分钟阅读
        </div>
      </div>

      <!-- 文章标题 -->
      <h3 class="text-lg font-bold text-gray-900 line-clamp-2">
        {post.title}
      </h3>
    </div>
  </article>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
