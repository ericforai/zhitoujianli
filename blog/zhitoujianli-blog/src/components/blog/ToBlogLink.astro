---
import { Icon } from 'astro-icon/components';
import { getBlogPermalink } from '~/utils/permalinks';
import { I18N } from 'astrowind:config';
import Button from '~/components/ui/Button.astro';

const { textDirection } = I18N;
---

<div class="mx-auto px-6 sm:px-6 max-w-3xl pt-8 md:pt-4 pb-12 md:pb-20">
  <div class="flex flex-col sm:flex-row items-center gap-3 sm:gap-4">
    <Button
      variant="tertiary"
      class="px-3 md:px-3 w-full sm:w-auto"
      href={getBlogPermalink()}
      aria-label="返回博客首页"
    >
      {
        textDirection === 'rtl' ? (
          <Icon name="tabler:chevron-right" class="w-5 h-5 mr-1 -ml-1.5 rtl:-mr-1.5 rtl:ml-1" />
        ) : (
          <Icon name="tabler:chevron-left" class="w-5 h-5 mr-1 -ml-1.5 rtl:-mr-1.5 rtl:ml-1" />
        )
      } 返回博客
    </Button>

    <Button
      variant="primary"
      class="px-3 md:px-3 w-full sm:w-auto"
      href="http://115.190.182.95"
      target="_blank"
      aria-label="访问智投简历主站"
    >
      <Icon name="tabler:external-link" class="w-4 h-4 mr-1" />
      智投简历主站
    </Button>
  </div>
</div>
