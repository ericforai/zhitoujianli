---
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  structuredData?: object;
  canonical?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  keywords,
  image,
  url,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  structuredData,
  canonical,
  noindex = false,
} = Astro.props;

const siteConfig = Astro.site;
const currentUrl = canonical || new URL(Astro.url.pathname, siteConfig);

// 默认值
const defaultTitle = '智投简历博客 - 让求职更智能';
const defaultDescription = '智投简历官方博客 - 分享求职技巧、简历优化、面试经验、职场发展等实用内容，助你更快拿到心仪Offer。AI驱动的智能求职平台，提供专业求职指导。';
const defaultKeywords = '求职技巧,简历优化,面试经验,职场发展,AI求职,智投简历,求职指导,简历制作,面试准备,职业规划';
const defaultImage = `${siteConfig}/_astro/hero-image.DwIC_L_T.png`;

const pageTitle = title ? `${title} — 智投简历博客` : defaultTitle;
const pageDescription = description || defaultDescription;
const pageKeywords = keywords || defaultKeywords;
const pageImage = image ? (image.startsWith('http') ? image : `${siteConfig}${image}`) : defaultImage;
const pageUrl = url || currentUrl.toString();

// 百度验证
const baiduVerification = 'codeva-xGT32pbUMi';
---

<!-- 基础SEO标签 -->
<title>{pageTitle}</title>
<meta name="description" content={pageDescription} />
<meta name="keywords" content={pageKeywords} />
<meta name="author" content={author || '智投简历团队'} />
<meta name="robots" content={noindex ? 'noindex,nofollow' : 'index,follow'} />
<link rel="canonical" href={pageUrl} />

<!-- 百度验证 -->
<meta name="baidu-site-verification" content={baiduVerification} />

<!-- Open Graph标签 -->
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={pageDescription} />
<meta property="og:image" content={pageImage} />
<meta property="og:url" content={pageUrl} />
<meta property="og:type" content={type} />
<meta property="og:site_name" content="智投简历博客" />
<meta property="og:locale" content="zh_CN" />

<!-- Twitter Card标签 -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={pageDescription} />
<meta name="twitter:image" content={pageImage} />
<meta name="twitter:site" content="@zhitoujianli" />
<meta name="twitter:creator" content="@zhitoujianli" />

<!-- 文章特定标签 -->
{type === 'article' && (
  <>
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {author && <meta property="article:author" content={author} />}
  </>
)}

<!-- 移动端优化 -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#0161ef" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
<meta name="apple-mobile-web-app-title" content="智投简历博客" />

<!-- 性能优化 -->
<link rel="dns-prefetch" href="//fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
<link rel="preload" href="/_astro/hero-image.DwIC_L_T.png" as="image" type="image/png" />

<!-- 结构化数据 -->
{structuredData && (
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
)}

<!-- 默认结构化数据 -->
{!structuredData && (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": type === 'article' ? 'BlogPosting' : 'WebSite',
    "headline": pageTitle,
    "description": pageDescription,
    "image": pageImage,
    "url": pageUrl,
    "author": {
      "@type": "Organization",
      "name": author || "智投简历团队"
    },
    "publisher": {
      "@type": "Organization",
      "name": "智投简历",
      "logo": {
        "@type": "ImageObject",
        "url": `${siteConfig}/_astro/hero-image.DwIC_L_T.png`
      }
    },
    ...(type === 'article' && publishedTime && {
      "datePublished": publishedTime,
      "dateModified": modifiedTime || publishedTime
    })
  })} />
)}
