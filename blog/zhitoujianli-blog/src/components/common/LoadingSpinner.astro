---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  text?: string;
  class?: string;
}

const {
  size = 'md',
  text = '加载中...',
  class: className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};

const textSizeClasses = {
  sm: 'text-sm',
  md: 'text-base',
  lg: 'text-lg'
};
---

<div class={`flex flex-col items-center justify-center p-4 ${className}`}>
  <div class={`${sizeClasses[size]} animate-spin rounded-full border-2 border-gray-300 border-t-blue-600 dark:border-gray-600 dark:border-t-blue-400`}></div>
  {text && (
    <p class={`mt-2 ${textSizeClasses[size]} text-gray-600 dark:text-gray-400`}>
      {text}
    </p>
  )}
</div>
