---
import { Icon } from 'astro-icon/components';
import { getBlogPermalink } from '~/utils/permalinks';

export interface Props {
  items?: Array<{
    text: string;
    href?: string;
    current?: boolean;
  }>;
}

const { items = [] } = Astro.props;

// 默认面包屑
const defaultBreadcrumbs = [
  { text: '首页', href: 'http://115.190.182.95' },
  { text: '博客', href: getBlogPermalink() },
];

// 合并默认和传入的面包屑
const breadcrumbs = [...defaultBreadcrumbs, ...items];
---

<nav aria-label="面包屑导航" class="mb-6">
  <ol class="flex items-center space-x-1 md:space-x-2 text-xs md:text-sm text-gray-500 dark:text-gray-400 overflow-x-auto pb-2">
    {
      breadcrumbs.map((item, index) => (
        <li class="flex items-center whitespace-nowrap">
          {index > 0 && (
            <Icon
              name="tabler:chevron-right"
              class="w-3 h-3 md:w-4 md:h-4 mx-1 md:mx-2 text-gray-400 flex-shrink-0"
              aria-hidden="true"
            />
          )}
          {item.href && !item.current ? (
            <a
              href={item.href}
              class="hover:text-gray-700 dark:hover:text-gray-300 transition-colors duration-200 truncate max-w-[120px] md:max-w-none"
              aria-label={`导航到 ${item.text}`}
              title={item.text}
            >
              {item.text}
            </a>
          ) : (
            <span
              class={`truncate max-w-[120px] md:max-w-none ${item.current ? 'text-gray-900 dark:text-white font-medium' : ''}`}
              aria-current={item.current ? 'page' : undefined}
              title={item.text}
            >
              {item.text}
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>
